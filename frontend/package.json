{
  "name": "frontend",
  "productName": "NohamDrive",
  "type": "module",
  "version": "0.4.2",
  "author": "Alexandre LARUE",
  "description": "NohamDrive, le meilleur Drive, fait par les meilleurs, pour les meilleurs !",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "electron:build": "tsc -p electron",
    "electron:dev": "concurrently \"nuxt dev\" \"wait-on http://localhost:3000 && npm run electron:start\"",
    "electron:start": "npm run electron:build && electron .",
    "build:elec": "nuxt build && cd .output/server && npm install --omit=dev --prefer-offline",
    "electron:dist": "npm run build:elec && npm run electron:build && electron-builder"
  },
  "build": {
    "appId": "fr.nohamdrive.app",
    "productName": "NohamDrive",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".output/server/node_modules/",
        "to": "server/node_modules/"
      },
      {
        "from": ".output/server/",
        "filter": [
          "!node_modules"
        ],
        "to": "server/"
      },
      {
        "from": ".output/public/",
        "to": "public/"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "NoArAlMa",
        "repo": "NohamDrive"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "forceCodeSigning": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "cscLink": "./electron/nohamdrive.pfx",
    "cscKeyPassword": "nohamdrive"
  },
  "dependencies": {
    "@iconify-json/lucide": "^1.2.80",
    "@iconify-json/material-symbols": "^1.2.50",
    "@nuxt/hints": "^1.0.0-alpha.5",
    "@nuxt/ui": "^4.1.0",
    "@pinia/nuxt": "^0.11.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "nuxt": "^4.2.1",
    "pinia": "^3.0.4",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@iconify-json/heroicons": "^1.2.3",
    "@iconify-json/vscode-icons": "^1.2.37",
    "@types/node": "^25.0.1",
    "@types/wait-on": "^5.3.4",
    "@vueuse/nuxt": "^14.1.0",
    "baseline-browser-mapping": "^2.9.14",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  }
}
